{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "kervi-js": [
        "dist/kervi-js"
      ],
      "kervi-js/*": [
        "dist/kervi-js/*"
      ],
      "ngx-kervi": [
        "dist/ngx-kervi"
      ],
      "ngx-kervi/*": [
        "dist/ngx-kervi/*"
      ],
      "ngx-kervi-components": [
        "dist/ngx-kervi-components"
      ],
      "ngx-kervi-components/*": [
        "dist/ngx-kervi-components/*"
      ],
      "kervi-zorro": [
        "dist/kervi-zorro"
      ],
      "kervi-zorro/*": [
        "dist/kervi-zorro/*"
      ]
    }
  }
}